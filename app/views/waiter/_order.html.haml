#order_page{ "data-role" => "page" }
  %div{ "data-role" => "header" }
    %h1
  %ul{ "data-role" => "listview", "data-theme" => "c", "data-dividertheme" => "b" }
    - ["Drink", "Food"].each_with_index do |category, index|
      %li
        %a{ :href => "#category_#{index+1}" }= category

:javascript
  $('#order_page').bind('pageinit', function(){
    Waiter.initializeOrderPage($(this));
  })
