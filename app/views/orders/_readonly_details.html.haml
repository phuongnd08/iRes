%li{ "data-order-id" => order.order_id, "data-count-theme" => order.order_theme }
  %a.go-to-btn{ :href => edit_order_path(order) }
    .relative
      %h3= order.name
    %div
      %span.order_time= order.timing
      \|
      %span.total_price= order.order_total_price
    - if role.waiter?
      .tool-buttons
        - [:served, :paid].each do |state|
          %a{ :class => "mark-as-#{state}-btn #{order.send(:"mark_as_#{state}_visibility_class")}", "data-role" => "button", "data-inline" => "true",
            "data-ajax" => false, "data-confirm" => t("order.#{state}_confirmation"),
            "data-remote" => true, "data-method" => :put,
            :"data-href" => send(:"mark_#{state}_order_path", order) }= t("buttons.mark_#{state}")
